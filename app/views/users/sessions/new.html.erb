<div class="users__sign-in">
  <main class="sign-in-form__container">

    <%= image_tag "pix-360-logo.svg", :class => "pix-360-logo__image"%>

    <div class="sign-in-form__header">
      <h1 class="sign-in-form-title">Connectez-vous</h1>
    </div>

    <form class="sign-in-form__body">
      <%= link_to user_google_oauth2_omniauth_authorize_path, method: :post, :class=>"sign-in-form-body__google-connect-link" do %>
        <%= image_tag "logo_google.svg", :class => "sign-in-form-google-connect-link__logo"%>
        <%= content_tag :span, "Se connecter avec Google", :class => "sign-in-form-google-connect-link__text" %>
      <% end %>

      <% if from_feedback? %>
        <div class="sign-in-form-body__bottom-decoration">
          <span>OU</span>
        </div>

        <%= link_to 'Je suis une personne extÃ©rieure', edit_feedback_path(id: feedback_id, shared_key: shared_key, external_user:true), class: 'pix-button pix-button--shape-rounded pix-button--size-big pix-button--background-blue' %>
      <% end %>

    </form>
  </main>
</div>
