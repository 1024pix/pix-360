<main class="feedbacks__page">
  <h1 class="feedbacks__title">Évaluations données</h1>

  <% if @feedbacks.present? %>
    <div class="index-feedback__row">
      <% @feedbacks.each do |feedback| %>

        <%= link_to edit_feedback_path(feedback), class: 'feedback' do %>
          <div class="feedback__information">
            <div class="feedback-information__respondent">
                  <%= "Remplie pour #{feedback.requester.full_name}" %>
            </div>
            <div class="feedback-information__date">
              <%= feedback.created_at.strftime("%d/%m/%y") %>
            </div>
          </div>
        <% end %>

      <% end %>
    </div>
  <% else %>
    <div class="feedbacks__content">
      <p class="feedbacks-content__information">Vous n'avez pas encore donné d'évaluation.</p>
    </div>
  <% end %>
</main>