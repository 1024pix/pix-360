<div class="encryption__page">
  <main class="encryption__container">

    <div class="encryption__header">
      <h1 class="encryption-header__title">Authentification</h1>
      <p class="encryption-header__subtitle">Votre mot de passe sert à chiffrer vos données.</p>
    </div>

    <%= form_with model: current_user, url: encryption_save_path, class: 'encryption__body' do |f| %>
      <% if f.object.errors.any? %>
        <div class="alert alert-danger">
          <% f.object.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>

      <div class="encryption-body__field">
        <%= f.label :password, "Mot de passe", class: 'encryption-field__label' %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "password", class: 'encryption-field__input' %>
      </div>

      <div class="encryption-body__button">
        <%= f.submit "Confirmer", class: 'pix-button pix-button--shape-rounded pix-button--size-big pix-button--background-blue' %>
      </div>
    <% end %>
    <div class="encryption__separator"><span>OU</span></div>
    <%= form_with model: current_user, url: users_delete_path, method: :delete, class: 'encryption__body' do |f| %>
      <h2 class="encryption__reset-title">Vous avez oublié votre mot de passe ?</h2>
      <div class="encryption-body__button">
        <%= f.submit "Supprimer mon compte",  data: { confirm: "Vous allez supprimer votre compte. Vos évaluations précédemment envoyées seront conservées et accessibles par les concernés."}, class: 'pix-button pix-button--shape-rounded pix-button--size-big pix-button--background-red' %>
      </div>
    <% end %>
  </main>
</div>
